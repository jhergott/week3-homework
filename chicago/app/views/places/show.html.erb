<style>
  h2 {
    color: white;
    background: #555;
    padding: 6px;
    text-align: center;
  }
  .rating {
    color: gray;
    border: solid 1px gray;
    padding: 4px;
  }
  img {
    float: left;
    margin-right: 40px;
    box-shadow: 8px 8px 4px gray;
    width: "400px";
  }
  p {
    margin-top: 24px;
    margin-bottom: 24px;
  }
</style>

<a href="/places">Home Page</a>
<br><br>
<a href="/places/<%= @place.id %>/edit">Edit Location</a>

<h2><%= @place.title %></h2>

<img src="<%= @place.photo_url %>">

<% formatted_price = @place.price / 100%>
<% price_cents = @place.price % 100 %>

<h4>Price: </h4>
<% if price_cents < 10 %>

<p> $ <%= formatted_price %>.0<%=  price_cents %> </p>

<% else %>

<p> $ <%= formatted_price %>.<%=  price_cents %> </p>

<% end %>

<h4>Description: </h4>
<p> <%= @place.description %> </p>

<br><br>

<form action="/places/<%= @place.id %>/review">
Title:<br>
<input type="text" name="title">
<br>
Rating (0 to 5):<br>
<input type="text" name="rating">
<br>
Description:<br>
<input type="text" name="description">
<br><br>
<input type="submit" value="Submit Review">
</form>

<br><br>

<h3>REVIEWS</h3>

<% @reviews.each do |review| %>
  <p><%= review.title%>  --  <%= review.rating%> STARS</p>
  <p><%= review.description%> </p>
<% end %>
